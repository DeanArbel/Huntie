<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>NewGameServlet</servlet-name>
        <servlet-class>servlets.GameCreator.NewGameServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewGameServlet</servlet-name>
        <url-pattern>/newGame</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UnpublishedGameComponentsServlet</servlet-name>
        <servlet-class>servlets.GameCreator.UnpublishedGameComponentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnpublishedGameComponentsServlet</servlet-name>
        <url-pattern>/Manager/GameCreator/GameComponents</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GameEntryServlet</servlet-name>
        <servlet-class>servlets.Game.GameEntryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GameEntryServlet</servlet-name>
        <url-pattern>/Player/GameEntry</url-pattern>
    </servlet-mapping>
</web-app>